<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="742.0" prefWidth="842.0"
            styleClass="backgroundColor" stylesheets="@../../../util/style.css"
            xmlns="http://javafx.com/javafx/19"
            fx:controller="application.createNewTestScreen.pickQuestionsScreen.PickQuestionsController">
    <AnchorPane fx:id="header" prefHeight="101.0" prefWidth="842.0" styleClass="pageHeader">
        <Label alignment="CENTER" layoutX="173.0" layoutY="14.0" prefHeight="54.0" prefWidth="481.0"
               style="-fx-font-weight: bold;" text="Pick Questions" textFill="#fafafa">
            <font>
                <Font name="Trebuchet MS" size="40.0"/>
            </font>
        </Label>
        <Button layoutX="810.0" layoutY="4.0" minHeight="25.0" minWidth="25.0" mnemonicParsing="false"
                onAction="#closeClient" prefHeight="25.0" prefWidth="25.0" styleClass="regularButtons" text="X"/>
        <Button layoutX="773.0" layoutY="4.0" minHeight="25.0" minWidth="25.0" mnemonicParsing="false"
                onAction="#minimizeWindow" prefHeight="25.0" prefWidth="25.0" styleClass="regularButtons" text="_"/>
        <ImageView layoutX="746.0" layoutY="47.0">
            <Image url="@../../../images/icons8-person-16.png"/>
        </ImageView>
        <Text fx:id="usernameText" fill="WHITE" layoutX="769.0" layoutY="59.0" strokeType="OUTSIDE" strokeWidth="0.0"
              underline="true" wrappingWidth="52.798828125">
            <font>
                <Font name="Trebuchet MS" size="12.0"/>
            </font>
        </Text>
        <Button layoutX="746.0" layoutY="69.0" minWidth="36.0" mnemonicParsing="false" onAction="#LogOut"
                prefHeight="26.0" prefWidth="82.0" styleClass="pageHeaderBtn" text="Logout">
            <font>
                <Font name="Franklin Gothic Demi Cond" size="14.0"/>
            </font>
        </Button>
        <ImageView fitHeight="78.0" fitWidth="201.0" layoutX="28.0" layoutY="11.0" pickOnBounds="true"
                   preserveRatio="true">
            <Image url="@../../../images/Logo_Transparent2.png"/>
        </ImageView>
    </AnchorPane>
    <HBox alignment="CENTER" layoutX="487.0" layoutY="126.0" prefHeight="28.0" prefWidth="298.0" spacing="10.0">
        <ImageView fitHeight="16.0" fitWidth="16.0">
            <Image url="@../../../images/icons8-search-24.png"/>
        </ImageView>
        <TextField prefHeight="27.0" prefWidth="379.0" promptText="Search a question"/>
    </HBox>
    <VBox layoutX="56.0" layoutY="117.0" prefHeight="289.0" prefWidth="730.0">
        <HBox prefHeight="100.0" prefWidth="200.0"/>
        <Label prefHeight="28.0" prefWidth="175.0" text="Question Database:">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <Label text="*Double click on a question to see full information on it">
            <font>
                <Font size="11.0"/>
            </font>
        </Label>
        <TableView fx:id="questionsTableView" prefHeight="326.0" prefWidth="730.0"/>
        <HBox alignment="CENTER_LEFT" prefHeight="28.0" prefWidth="201.0" spacing="20.0">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets top="3.0"/>
            </padding>
            <Button mnemonicParsing="false" styleClass="regularButtons" text="Add selected"/>
            <Button mnemonicParsing="false" styleClass="regularButtons" text="Deselect all"/>
        </HBox>
    </VBox>
    <Separator layoutY="413.0" prefHeight="5.0" prefWidth="842.0"/>
    <VBox layoutX="56.0" layoutY="417.0" prefHeight="249.0" prefWidth="730.0">
        <Label prefHeight="27.0" prefWidth="175.0" text="Selected Questions:">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <TableView fx:id="selectedQuestionsTableView" prefHeight="186.0" prefWidth="730.0"
                   style="-fx-border-color: #649DAD;"/>
        <Button mnemonicParsing="false" styleClass="regularButtons" text="Remove selected">
            <VBox.margin>
                <Insets top="3.0"/>
            </VBox.margin>
        </Button>
    </VBox>
    <Button layoutX="14.0" layoutY="666.0" mnemonicParsing="false" onAction="#backToCreateTest" prefHeight="54.0"
            prefWidth="63.0" styleClass="subButtons">
        <graphic>
            <ImageView fitHeight="39.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../../../images/back.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Label layoutX="33.0" layoutY="717.0" text="Back"/>
    <Button layoutX="773.0" layoutY="666.0" mnemonicParsing="false" prefHeight="54.0" prefWidth="63.0"
            styleClass="subButtons">
        <graphic>
            <ImageView fitHeight="39.0" fitWidth="39.0" preserveRatio="true">
                <Image url="@../../../images/Save.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Label layoutX="792.0" layoutY="716.0" text="Save"/>
</AnchorPane>
